<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate TargetType="{x:Type TabControl}" x:Key="TabPagerTemplate">
        <Border>
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type TabControl}" x:Key="TabPager">
        <Setter Property="Template" Value="{StaticResource TabPagerTemplate}" />
    </Style>

    <ControlTemplate TargetType="{x:Type TabControl}" x:Key="WizPagerTemplate">
        <DockPanel>

            <Border>
                <ContentPresenter />
            </Border>
        </DockPanel>
    </ControlTemplate>
</ResourceDictionary>